<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Wait Label -->
    <TextView
        android:id="@+id/txtTtC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/dk_grey"
        android:text="@string/agCh"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Loading Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/spinnerC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/loading"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTtC"/>

    <!-- Error Animação -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/erroC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/cancel"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"
        app:lottie_scale="0.5"
        android:visibility="gone"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTtC"/>

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/voltarConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/voltar"
        android:letterSpacing="0"
        android:fontFamily="@font/helvetica"
        android:visibility="gone"
        android:elevation="10dp"
        android:backgroundTint="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/erroC"
        android:layout_marginHorizontal="30dp"
        android:paddingVertical="12dp"
        app:cornerRadius="10dp"/>

    <!-- Footer Margin -->
    <View
        android:id="@+id/voltarConfMg"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:backgroundTint="@color/white"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/voltarConf"/>

</androidx.constraintlayout.widget.ConstraintLayout>