<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:id="@+id/activity_options">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/appbar_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:navigationIcon="@drawable/back_icon"
        app:navigationContentDescription="@string/voltar"
        app:title="@string/configs"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/AppBar"
        android:elevation="10dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appbar_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Info -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <!-- Profile Photo -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePhoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/basic_user_photo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/userInfo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Profile Name/Email -->
                <LinearLayout
                    android:id="@+id/userInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintWidth_percent="0.7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/profilePhoto"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Profile Name -->
                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helvetica"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginBottom="3dp"/>

                    <!-- Profile Email -->
                    <TextView
                        android:id="@+id/profileEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helvetica"
                        android:lines="1"
                        android:textColor="@color/dk_grey"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Settings Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Device Settings -->
                <LinearLayout
                    android:id="@+id/device"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Device Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/white"
                        android:text="@string/dispositivo"
                        android:textColor="@color/dk_grey"
                        android:textSize="13sp"
                        android:fontFamily="@font/helvetica"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="20dp"/>

                    <!-- Users Button -->
                    <LinearLayout
                        android:id="@+id/users"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <!-- Users Icon -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/users_icon"
                            android:contentDescription="@string/users"
                            android:layout_marginHorizontal="20dp"/>

                        <!-- Labels Container -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Users Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="3dp"
                                android:backgroundTint="@color/white"
                                android:text="@string/users"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/helvetica" />

                            <!-- Users Description -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:backgroundTint="@color/white"
                                android:text="@string/descUsers"
                                android:textColor="@color/dk_grey"
                                android:textSize="13sp"
                                android:fontFamily="@font/helvetica" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- WiFiConfigs Button -->
                    <LinearLayout
                        android:id="@+id/wifiConfigs"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <!-- WiFiConfigs Icon -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/wifi_icon"
                            android:contentDescription="@string/users"
                            android:layout_marginHorizontal="20dp"/>

                        <!-- Labels Container -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- WiFiConfigs Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="3dp"
                                android:backgroundTint="@color/white"
                                android:text="@string/configswifi"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/helvetica" />

                            <!-- WiFiConfigs Description -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:backgroundTint="@color/white"
                                android:text="@string/descWifi"
                                android:textColor="@color/dk_grey"
                                android:textSize="13sp"
                                android:fontFamily="@font/helvetica" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Safety Settings -->
                <LinearLayout
                    android:id="@+id/safety"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Safety Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/white"
                        android:text="@string/seguranca"
                        android:textColor="@color/dk_grey"
                        android:textSize="13sp"
                        android:fontFamily="@font/helvetica"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="20dp"/>

                    <!-- Block Button -->
                    <LinearLayout
                        android:id="@+id/block"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <!-- Block Icon -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/lock_icon"
                            android:contentDescription="@string/users"
                            android:layout_marginHorizontal="20dp"/>

                        <!-- Labels Container -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <!-- Block Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="3dp"
                                android:backgroundTint="@color/white"
                                android:text="@string/bloqueio"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/helvetica" />

                            <!-- Block Description -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:backgroundTint="@color/white"
                                android:text="@string/descBloq"
                                android:textColor="@color/dk_grey"
                                android:textSize="13sp"
                                android:fontFamily="@font/helvetica" />
                        </LinearLayout>

                        <!-- Block Switch -->
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/swBlock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="20dp"
                            app:thumbTint="@color/dk_grey"
                            app:trackTint="@color/lt_grey"
                            android:clickable="false"
                            android:focusable="false"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Account Settings -->
                <LinearLayout
                    android:id="@+id/account"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Account Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/white"
                        android:text="@string/conta"
                        android:textColor="@color/dk_grey"
                        android:textSize="13sp"
                        android:fontFamily="@font/helvetica"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="20dp"/>

                    <!-- ChangePass Button -->
                    <LinearLayout
                        android:id="@+id/changePass"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <!-- ChangePass Icon -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/password_icon"
                            android:contentDescription="@string/users"
                            android:layout_marginHorizontal="20dp"/>

                        <!-- Labels Container -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- ChangePass Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="3dp"
                                android:backgroundTint="@color/white"
                                android:text="@string/alterar"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/helvetica" />

                            <!-- ChangePass Description -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:backgroundTint="@color/white"
                                android:text="@string/descAlt"
                                android:textColor="@color/dk_grey"
                                android:textSize="13sp"
                                android:fontFamily="@font/helvetica" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Logout Button -->
                    <LinearLayout
                        android:id="@+id/logout"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <!-- Logout Icon -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/logout_icon"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            android:contentDescription="@string/users"
                            android:layout_marginHorizontal="20dp"/>

                        <!-- Labels Container -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Logout Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="3dp"
                                android:backgroundTint="@color/white"
                                android:text="@string/sair"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/helvetica" />

                            <!-- Logout Description -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:backgroundTint="@color/white"
                                android:text="@string/descSair"
                                android:textColor="@color/dk_grey"
                                android:textSize="13sp"
                                android:fontFamily="@font/helvetica" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Version Label -->
            <TextView
                android:id="@+id/versionLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/dk_grey"
                android:textSize="13sp"
                android:fontFamily="@font/helvetica"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>