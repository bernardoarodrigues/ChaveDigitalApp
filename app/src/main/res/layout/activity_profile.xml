<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".Profile">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/appbar_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:navigationIcon="@drawable/back_icon"
        app:navigationContentDescription="@string/voltar"
        app:title="@string/perfil"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/AppBar"
        android:elevation="10dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appbar_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <!-- Photo Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_gravity="center_horizontal">

                <!-- Profile Photo -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePhotoBtn"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/basic_user_photo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- EditPhoto Button -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/editPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    app:borderWidth="0dp"
                    android:src="@drawable/camera_icon"
                    app:maxImageSize="20dp"
                    app:tint="@color/white"
                    app:backgroundTint="@color/primary"
                    android:visibility="visible"
                    android:contentDescription="@string/descEdit"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ChangeName Button -->
            <LinearLayout
                android:id="@+id/changeName"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- User Icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:src="@drawable/user_icon"
                    android:contentDescription="@string/users"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"/>

                <!-- Labels Container -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <!-- Name Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/white"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/nome"
                        android:textColor="@color/dk_grey"
                        android:textSize="13sp"
                        android:fontFamily="@font/helvetica" />

                    <!-- Name Text -->
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/helvetica" />

                    <!-- ChangeName Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/white"
                        android:layout_marginBottom="15dp"
                        android:text="@string/descNome"
                        android:textColor="@color/dk_grey"
                        android:textSize="12sp"
                        android:fontFamily="@font/helvetica" />
                </LinearLayout>

                <!-- ChangeName Icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:src="@drawable/edit_icon"
                    android:contentDescription="@string/users"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>